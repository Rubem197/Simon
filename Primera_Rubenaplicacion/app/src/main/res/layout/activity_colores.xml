<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colores">

    <Button
        android:id="@+id/btnSalir"
        style="@style/Widget.Material3.Button"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#71E8D0"
        android:text="Salir"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="156dp"
        android:text="Pruebita"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAzul"
        style="@style/Widget.Material3.Button"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#71E8D0"
        android:onClick="cambiarAzul"
        android:text="Azul"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRojo"
        style="@style/Widget.Material3.Button"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#71E8D0"
        android:onClick="cambiarRojo"
        android:text="Rojo"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerde"
        style="@style/Widget.Material3.Button"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#71E8D0"
        android:onClick="cambiarVerde"
        android:text="Verde"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnRojo"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toEndOf="@+id/btnAzul"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>